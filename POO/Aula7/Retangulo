public class Retangulo
{
   private double base;
   private double altura;
 
   public Retangulo (double b, double a)
   {
      base = b;
      altura = a;
   }        

   public Retangulo ()
   {
      base = 2;
      altura = 1;
   }        

   public boolean quadrado (double b,double a) {

   if(b == a)
      return true;
   else
   	return false;
   }

   public void verDados()
   {
       System.out.printf("Retangulo\nArea: %.2f / Perimetro: %.2f\nBase: %.2f / Altura: %.2f\n",base*altura, 
       base+base+altura+altura,base,altura);
       if(quadrado(base,altura))
       System.out.print("Quadrado: sim");
       else
       System.out.print("Quadrado: nao");
       
   }
  
}
